# ignore .htaccess and wp-config.php
.htaccess
wp-config.php

# ignore node modules/dependency directories.
node_modules/

# ignore log files and databases
*.log
*.sql
*.sqlite

# ignore everything in the root except the "wp-content" directory.
!wp-content/

# ignore everything in uploads folder
wp-content/uploads/

# ignore everything in the "wp-content" directory, except:
# "mu-plugins", "plugins", "themes", directory
wp-content/*
!wp-content/mu-plugins/
!wp-content/plugins/
!wp-content/themes/